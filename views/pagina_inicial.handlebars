<section id="section_ini">
       
      {{#each erros_postagem}}
            <div class="alert alert-danger" role="alert">{{texto}}</div>
      
      {{else}}

      {{/each}}


      {{#if eh_pesquisador}}
            {{#each erros_publicacao}}
                  <div class="alert alert-danger" role="alert">{{texto}}</div>
            {{else}}
            {{/each}}
            
            <div class="accordion" id="accordionExample">
                  <div class="card">
                        <div class="card-header" id="headingOne">
                              <h2 class="mb-0">
                              <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="True" aria-controls="collapseOne">
                              Postar mensagem
                              </button>
                              </h2>
                        </div>

                        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                              <div class="card-body">
                                    <div id="formulario_postar">
                                          <form action="./add_postagem" method="POST">
                                                <div class="form-group">
                                                <label for="exampleFormControlTextarea1" class="font-weight-bold">Postagem:</label>
                                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="texto_postagem" placeholder="Comunique-se com os demais membros da rede...">{{postagem_editar.dataValues.conteudo}}</textarea>
                                                </div> 
                                                <button type="submit" class="btn btn-light">Publicar</button>        
                                          </form>
                                    </div>   
                              </div>
                        </div>
                  </div>
                  <div class="card">
                        <div class="card-header" id="headingTwo">
                              <h2 class="mb-0">
                              <button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                              Postar Publicação Científica
                              </button>
                              </h2>
                        </div>
                        <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                              <div class="card-body">
                                     <div id="formulario_postar">
                                          <form action="./add_publicacao" method="POST" enctype="multipart/form-data">
                                                <div class="form-group">
                                                <label for="exampleFormControlTextarea1" class="font-weight-bold">Publicação:</label><br>
                                                <div class="separa_pub">
                                                      URL:<input type="text" name="url_pub">
                                                      Tags:<input type="text" name="tags_pub">
                                                      <br>
                                                      <input type="file" name="arquivo_pub" required>
                                                </div>
                                                Título:<input type="text" name="titulo_pub">
                                                Local da publicação:<input type="text" name="local_pub">
                                                Ano da publicação:<input type="number" name="ano_pub">
                                                <br>
                                                Resumo:<textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="resumo_pub" placeholder="Breve resumo sobre a publicação..."></textarea>
                                                
                                                </div> 
                                                <button type="submit" class="btn btn-light">Publicar</button>        
                                          </form>
                                    </div>
                              </div>
                        </div>
                  </div>
            </div>


           

      {{else}}
                  <div class="accordion" id="accordionExample">
                  <div class="card">
                        <div class="card-header" id="headingOne">
                              <h2 class="mb-0">
                              <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="True" aria-controls="collapseOne">
                              Postar mensagem
                              </button>
                              </h2>
                        </div>

                        <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                              <div class="card-body">
                                    <div id="formulario_postar">
                                          <form action="./add_postagem" method="POST">
                                                <div class="form-group">
                                                <label for="exampleFormControlTextarea1" class="font-weight-bold">Postagem:</label>
                                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="texto_postagem" placeholder="Comunique-se com os demais membros da rede ...">{{postagem_editar.dataValues.conteudo}}</textarea>
                                                </div> 
                                                <button type="submit" class="btn btn-light">Publicar</button>        
                                          </form>
                                    </div>   
                              </div>
                        </div>
                  </div>
                  </div>
                  
      {{/if}}

       
       
       
     <br> <br> <br>
     
     <h1 id="titulo_postagens">Postagens</h1>
      {{#each postagens}}
            <center>
      <div id="quadro_postagens"> 
            <div class="edit_pub">
                  <a href="/deletar_postagem/{{dataValues.id}}"><button type="button" class="btn btn-secondary">Deletar</button></a>
                  <a href="/atualiza_postagem/{{dataValues.id}}"><button type="button" class="btn btn-secondary">Editar</button></a> 
            </div>
            <small>postado em {{#formatDate dataValues.createdAt}}{{/formatDate}}</small>
            
            <div class="clear"></div>
          <hr> <p>{{dataValues.conteudo}}</p>

            <hr>
            <p class="curtidas_post">Curtidas: {{dataValues.curtidas}}</p>
            <div class="clear"></div>
      </div>
      </center>
      {{else}}
      <p>Nenhuma postagem para exibir, compartilhe idéias e interaja com seus amigos.</p>
      {{/each}}


      {{#if eh_pesquisador}}
      <h1>Publicações</h1>
            {{#each publicacoes}}
      <center>
      <div id="quadro_postagens">
            <div class="edit_pub">
                  <a href="/deletar_publicacao/{{dataValues.id}}"><button type="button" class="btn btn-secondary">Deletar</button></a>
                  <a href="/atualiza_publicacao/{{dataValues.id}}"><button type="button" class="btn btn-secondary">Editar</button></a> 
            </div>
            <small>publicado em {{#formatDate dataValues.createdAt}}{{/formatDate}}</small>
            <div class="clear"></div>
            
            <p class="titulo_pub"><b>{{dataValues.titulo_publicacao}}</p></b>
            <hr>
            <div class="info_pub">
                  <i>Local de publicação: {{dataValues.local_publicacao}}</i><br>
                  <i>Ano: {{dataValues.ano_publicacao}}</i><br>
                  <i><a href="https://{{dataValues.url_publicacao}}/" target="_blank">URL da publicação</a><br></i>
                  <i>Tags: {{dataValues.tags_publicacao}}<br></i>
                  <a href="/publicacoes/{{dataValues.arquivo}}" target="_blank">Download da publicação</a>           
            </div>
            <p class="resumo_pub"><b>Resumo:</b>{{dataValues.resumo_publicacao}}</p>
            <div class="clear"></div>
            <hr>
            <p class="curtidas_post">Curtidas: {{dataValues.curtidas}}</p>
            <div class="clear"></div>
      </div>
      </center>
            {{else}}
                  <p>Nenhuma publicação para exibir, compartilhe conhecimento e cadastre agora mesmo uma publicação .</p>
            {{/each}}
      {{else}}
      {{/if}}
</section>
</div>



